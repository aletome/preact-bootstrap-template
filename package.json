{
  "name": "preact-bootstrap-template",
  "author": {
    "name": "Alessandro Tom√®"
  },
  "version": "1.0.1",
  "license": "MIT",
  "scripts": {
    "build": "preact build --no-prerender && npm run purgecss",
    "serve": "sirv build --port 8085 --cors --single",
    "dev": "preact watch",
    "lint": "eslint src",
    "test": "jest",
    "purgecss": "node ./node_modules/purgecss/bin/purgecss.js --config ./config/purgecss.config.js"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/"
    ]
  },
  "devDependencies": {
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^2.0.0",
    "eslint": "^6.0.1",
    "eslint-config-preact": "^1.1.0",
    "jest": "^24.9.0",
    "jest-preset-preact": "^1.0.0",
    "node-sass": "^5.0.0",
    "preact-cli": "^3.0.0",
    "purgecss": "^3.1.3",
    "sass-loader": "^10.1.0",
    "sirv-cli": "1.0.3"
  },
  "dependencies": {
    "bootstrap": "^5.0.0-beta1",
    "preact": "^10.3.2",
    "preact-render-to-string": "^5.1.4",
    "preact-router": "^3.2.1"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  }
}
